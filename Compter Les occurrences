ALGORITHME CompterOccurrences

VARIABLES
    Tableau T(50) : Entier
    n : Entier
    i, c : Entier

DEBUT

    POUR i <-- 0 à 49 pas 1 FAIRE
        ecrire("Entrez un entier pour la position ", i+1, " : ")
        lire(T(i))

    FIN POUR

    ecrire("Entrez un entier à rechercher : ")
    lire(n)

    c <-- 0

  
    POUR i <-- 0 à 49 pas 1 FAIRE
        SI T(i) = n ALORS
            c <-- c + 1
        FIN SI
    FIN POUR

    ecrire("Le nombre d'occurrences de ", n, " dans le tableau est : ", c)

FIN
